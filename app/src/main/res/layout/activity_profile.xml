<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/comp"
            app:aspect_ratio="1.78" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_switch_theme"
                android:layout_width="@dimen/btn_round_size"
                android:layout_height="@dimen/btn_round_size"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="48dp"
                android:layout_toStartOf="@id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/themes_switch" />

            <ru.skillbranch.devintensive.ui.custom.AvatarImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_round_size"
                android:layout_height="@dimen/avatar_round_size"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/splash" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/btn_round_size"
                android:layout_height="@dimen/btn_round_size"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_edit_black_24dp" />

            <TextView
                android:id="@+id/tv_nick_name"
                style="@style/Profile.Header.NickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:layout_centerHorizontal="true"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/tv_rank"
                style="@style/Profile.Header.Rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nick_name"
                android:layout_centerHorizontal="true"
                tools:text="Junior android developer" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccentSurface"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_16pd"
            android:layout_marginBottom="@dimen/spacing_small_16pd"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rating"
                style="@style/Profile.Metrics.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/rating"
                android:text="0" />

            <TextView
                style="@style/Profile.Metrics.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_normal_16pd"
            android:layout_marginBottom="@dimen/spacing_normal_16pd"
            android:background="@color/color_divader_light" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_16pd"
            android:layout_marginBottom="@dimen/spacing_small_16pd"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_respect"
                style="@style/Profile.Metrics.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/respect"
                android:text="0" />

            <TextView
                style="@style/Profile.Metrics.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/respect" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        style="@style/Profile.InfoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_avatar"
            android:layout_width="@dimen/btn_round_size"
            android:layout_height="@dimen/btn_round_size"
            android:background="@drawable/avatar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_16pd"
            android:layout_toRightOf="@id/ic_avatar">

            <EditText
                android:id="@+id/et_first_name"
                style="@style/Profile.EditText.Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wr_first_name"
            android:layout_marginLeft="@dimen/spacing_normal_16pd"
            android:layout_toRightOf="@id/ic_avatar">

            <EditText
                android:id="@+id/et_last_name_name"
                style="@style/Profile.EditText.Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_last_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="?attr/colorDivider" />

    <LinearLayout
        style="@style/Profile.InfoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/btn_round_size"
            android:layout_height="@dimen/btn_round_size"
            android:src="@drawable/about" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16pd"
            app:counterEnabled="false"
            app:counterMaxLength="128">

            <EditText
                android:id="@+id/et_about"
                style="@style/Profile.EditText.MultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_about"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="?attr/colorDivider" />

    <LinearLayout
        style="@style/Profile.InfoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/btn_round_size"
            android:layout_height="@dimen/btn_round_size"
            android:src="@drawable/folder" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_repo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16pd"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_repository"
                style="@style/Profile.EditText.Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_repo"
                android:imeOptions="actionDone"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ic_eye"
            android:layout_width="@dimen/spacing_large_24pd"
            android:layout_height="@dimen/spacing_large_24pd"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_normal_16pd"
            android:src="@drawable/eye" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_test_drawable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>