<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="@dimen/spacing_normal_16pd"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_done_black_24dp"
        android:visibility="gone" />

    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
        android:id="@+id/iv_avatar_user"
        android:layout_width="@dimen/item_avatar_size"
        android:layout_height="@dimen/item_avatar_size"
        android:layout_toEndOf="@id/iv_selected" />

    <View
        android:id="@+id/sv_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/tv_user_name"
        android:background="@drawable/bg_indicator"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal_16pd"
        android:layout_toEndOf="@id/iv_avatar_user"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        tools:text="User name" />

    <TextView
        android:id="@+id/tv_last_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginLeft="@dimen/spacing_normal_16pd"

        android:layout_toRightOf="@id/iv_avatar_user"
        tools:text="online" />
</RelativeLayout>